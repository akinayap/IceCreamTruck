<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box"
        android:padding="15dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="Today's Spending"
            android:textAlignment="center"
            android:layout_alignStart="@id/breakfast_txt"
            android:layout_alignEnd="@id/minus_breakfast"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>

        <ImageView
            android:id="@+id/seperator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/title"
            android:layout_alignStart="@id/breakfast_txt"
            android:layout_alignEnd="@id/minus_breakfast"
            android:layout_marginStart="-5dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_bright" />

        <TextView
            android:id="@+id/breakfast_txt"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_below="@id/seperator"
            android:layout_marginTop="10dp"
            android:text="Breakfast"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>

        <TextView
            android:id="@+id/lunch_txt"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_below="@id/breakfast_txt"
            android:layout_marginTop="10dp"
            android:text="Lunch"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>

        <TextView
            android:id="@+id/dinner_txt"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_below="@id/lunch_txt"
            android:layout_marginTop="10dp"
            android:text="Dinner"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>

        <TextView
            android:id="@+id/breakfast_cost"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/seperator"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/breakfast_txt"
            android:text="0.00"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lunch_cost"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/breakfast_cost"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/lunch_txt"
            android:text="0.00"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/dinner_cost"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/lunch_cost"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/dinner_txt"
            android:text="0.00"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <Button
            android:id="@+id/add_breakfast"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/seperator"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/breakfast_cost"
            android:background="@drawable/add"
            android:backgroundTint="@android:color/holo_blue_bright"/>

        <Button
            android:id="@+id/add_lunch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/add_breakfast"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/lunch_cost"
            android:background="@drawable/add"
            android:backgroundTint="@android:color/holo_blue_bright"/>

        <Button
            android:id="@+id/add_dinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/add_lunch"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/dinner_cost"
            android:background="@drawable/add"
            android:backgroundTint="@android:color/holo_blue_bright"/>


        <Button
            android:id="@+id/minus_breakfast"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/seperator"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/add_breakfast"
            android:background="@drawable/minus"
            android:backgroundTint="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/minus_lunch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/minus_breakfast"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/add_lunch"
            android:background="@drawable/minus"
            android:backgroundTint="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/minus_dinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/minus_lunch"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/add_dinner"
            android:background="@drawable/minus"
            android:backgroundTint="@android:color/holo_blue_bright" />


        <TextView
            android:id="@+id/other_txt"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_below="@id/dinner_txt"
            android:layout_marginTop="10dp"
            android:text="Others"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textColor="@android:color/holo_blue_bright"/>

        <TextView
            android:id="@+id/other_cost"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/dinner_cost"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/other_txt"
            android:text="0.00"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />

        <Button
            android:id="@+id/add_others"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/add_dinner"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/other_cost"
            android:background="@drawable/add"
            android:backgroundTint="@android:color/holo_blue_bright"/>

        <Button
            android:id="@+id/minus_others"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/minus_dinner"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/add_others"
            android:background="@drawable/minus"
            android:backgroundTint="@android:color/holo_blue_bright" />


        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/minus_others"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/save_btn"
            android:text="Save"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>